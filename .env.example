# === Broker & Profile ===
# PROFILE determines whether the orchestrator arms paper ("paper") or live ("live") mode.
PROFILE=paper
# MOCK_MODE=true forces the mock broker + simulated data feeds.
# MOCK_MODE=false requires valid Alpaca credentials and enables real routing.
MOCK_MODE=false
# DRY_RUN=true keeps the broker adapter in "pretend" mode even when MOCK_MODE=false.
# DRY_RUN=false allows the adapter to submit orders to Alpaca.
DRY_RUN=false

# === Alpaca configuration ===
ALPACA_KEY_ID=your_key
ALPACA_SECRET_KEY=your_secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# === UI server ===
STREAMLIT_SERVER_PORT=8501

# === Backend API ===
API_HOST=127.0.0.1
API_PORT=8000

# === Logging ===
LOG_LEVEL=INFO
