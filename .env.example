# --- Broker & Mode ---
BROKER=alpaca
PROFILE=paper  # paper|live
MOCK_MODE=false
DRY_RUN=false

# --- Alpaca (Paper) ---
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_KEY_ID=YOUR_KEY_ID
ALPACA_SECRET_KEY=YOUR_SECRET

# Optional: Data/Trading WS (leave blank to let SDK pick defaults)
ALPACA_DATA_WS_URL=
ALPACA_TRADING_WS_URL=

# --- Risk & Kill Switch ---
KILL_SWITCH_DEFAULT=standby   # standby|engaged
DAILY_LOSS_LIMIT=0.05
MAX_PORTFOLIO_NOTIONAL=100000
MAX_POSITIONS=10
COOLDOWN_SECS=0

# --- Strategy thresholds ---
CONFIDENCE_THRESHOLD=0.55
EXPECTED_VALUE_THRESHOLD=0.0
