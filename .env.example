# --- Broker & Mode ---
BROKER=alpaca
PROFILE=paper  # paper|live
MOCK_MODE=false
DRY_RUN=false
# Preopen trading (place opening-auction orders)
ALLOW_PREOPEN=true
PREOPEN_PLACE_MINUTES=5
DEFAULT_OPEN_ORDER_KIND=market

# --- Profit & Risk Feature Flags ---
ENABLE_OPTION_EXITS=false
OPT_TP_PCT=25
OPT_SL_PCT=10
ENABLE_SHORTS=false
ENABLE_DYNAMIC_SIZING=false
PER_TRADE_RISK_PCT=1.0
ENABLE_TRAILING=false
TRAIL_BE_PCT=0.5
TRAIL_STEP_PCT=0.25

# --- Alpaca (Paper) ---
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_KEY_ID=YOUR_KEY_ID
ALPACA_SECRET_KEY=YOUR_SECRET
# Legacy environment variable names also supported:
# ALPACA_API_KEY_ID=YOUR_KEY_ID
# ALPACA_API_SECRET_KEY=YOUR_SECRET

# Optional: Data/Trading WS (leave blank to let SDK pick defaults)
ALPACA_DATA_WS_URL=
ALPACA_TRADING_WS_URL=

# --- Risk & Kill Switch ---
KILL_SWITCH_DEFAULT=standby   # standby|engaged
DAILY_LOSS_LIMIT=0.05
MAX_PORTFOLIO_NOTIONAL=100000
MAX_POSITIONS=10
COOLDOWN_SECS=0

# --- Strategy thresholds ---
CONFIDENCE_THRESHOLD=0.55
EXPECTED_VALUE_THRESHOLD=0.0

# Extended-hours trading
# Optional: point to a custom universe file; defaults to config/extended_tickers.txt
EXTENDED_UNIVERSE_FILE=config/extended_tickers.txt
# Strict extended-hours enforcement (limit/day only) happens in the adapter per Alpaca docs.
# If your strategy needs auto-derivation of limit prices, implement price_hint in signals.
